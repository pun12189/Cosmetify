<Page x:Class="BahiKitaab.RenderView.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BahiKitaab.RenderView"
      xmlns:sc="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <sc:WpfPlot x:Name="barPlot" Grid.Row="0" Grid.Column="0"/>
        <sc:WpfPlot x:Name="piePlot" Grid.Row="0" Grid.Column="2"/>
        <sc:WpfPlot x:Name="dotPlot" Grid.Row="2" Grid.Column="0"/>
        <sc:WpfPlot x:Name="barHPlot" Grid.Row="2" Grid.Column="2"/>
    </Grid>
</Page>
